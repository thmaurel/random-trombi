<div class="container">
  <div class="cards">
    <% @profiles.each do |profile| %>
      <div class="index-card">
        <% if profile.photo.attached? %>
          <%= cl_image_tag profile.photo.key, class: "index-img" %>
        <% else %>
          <%= image_tag "home.jpg", id: "show-img" %>
        <% end %>
        <div>
          <h2><%= profile.name %></h2>
          <p><%= profile.job %></p>
          <%= link_to "Edit", edit_profile_path(profile), class: "btn-trombino-reverse " %>
          <%= link_to "Delete", profile_path(profile), method: :delete, class: "btn-trombino-reverse " %>
        </div>
      </div>
    <% end %>
    <%= link_to new_profile_path do %>
      <div class="index-card-add">
        <h1>+</h1>
      </div>
    <% end %>
  </div>
</div>
